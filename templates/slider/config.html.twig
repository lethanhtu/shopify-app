{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .setting-pd-slider-frm label:hover{
            cursor: pointer;
        }
        .setting-pd-slider-frm .heading {
            margin: 20px auto;
        }
        .setting-pd-slider-frm .form-group {
            margin-bottom: 20px;
        }
        .setting-pd-slider-frm .setting-group .form-check {
            margin: 7px 0;
        }
        .list-price {
            visibility: hidden;
            opacity: 0;
            transition: visibility 0s 1s, opacity 1s linear;
        }

        input[type="radio"]:checked+label{ font-weight: bold; }
        input[type="radio"]:checked~.list-price {
            visibility: visible;
            opacity: 1;
            transition: opacity 1s linear;
        }
    </style>
    <div class="container">
        <form class="setting-pd-slider-frm">
            <h2 class="heading">Create Your Slider</h2>
            <div class="form-group row">
                <label for="slider_name" class="col-sm-2 col-form-label font-weight-bold">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="slider_name" placeholder="Type name of Slider...">
                </div>
            </div>

            <hr>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label font-weight-bold">Type Product</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="typeProduct" id="typeProduct1" value="option2">
                                <label class="form-check-label" for="typeProduct1">
                                    Category
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-check price-radio-group">
                                <input class="form-check-input" type="radio" name="typeProduct" id="typeProduct2" value="option2">
                                <label class="form-check-label" for="typeProduct2">
                                    Price
                                </label>
                                <div class="row list-price">
                                    <label for="list_price" class="col-sm-3 col-form-label text-right">Price Products:</label>
                                    <div class="col-sm-9">
                                        <select id="list_price" name="list_price" class="form-control">
                                            <option value="10">10 usd</option>
                                            <option value="100">100 usd</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>

            <div class="form-group row setting-group clearfix">
                <div class="col-sm-2 font-weight-bold">Setting</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck">
                        <label class="form-check-label" for="gridCheck">
                            Slider Autoplay
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck1">
                        <label class="form-check-label" for="gridCheck1">
                            Show Loop
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck2">
                        <label class="form-check-label" for="gridCheck2">
                            Show Arrows
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck3">
                        <label class="form-check-label" for="gridCheck3">
                            Show Dots
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="gridCheck4">
                        <label class="form-check-label" for="gridCheck4">
                            Open image link in new tab
                        </label>
                    </div>
                </div>
            </div>

            <fieldset class="form-group row offset-sm-2">
                <legend class="col-form-label col-sm-2">Slider To Shows</legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow1" value="option1">
                        <label class="form-check-label" for="slideToShow1">
                            1
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow2" value="option2">
                        <label class="form-check-label" for="slideToShow2">
                            2
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow3" value="option3">
                        <label class="form-check-label" for="slideToShow3">
                            3
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow4" value="option4">
                        <label class="form-check-label" for="slideToShow4">
                            4
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow5" value="option5" checked>
                        <label class="form-check-label" for="slideToShow5">
                            5
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow6" value="option6">
                        <label class="form-check-label" for="slideToShow6">
                            6
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToShow" id="slideToShow7" value="option7">
                        <label class="form-check-label" for="slideToShow7">
                            7
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-group row offset-sm-2">
                <legend class="col-form-label col-sm-2">Slider To Scroll</legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll1" value="option1" checked>
                        <label class="form-check-label" for="slideToScroll1">
                            1
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll2" value="option2">
                        <label class="form-check-label" for="slideToScroll2">
                            2
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll3" value="option3">
                        <label class="form-check-label" for="slideToScroll3">
                            3
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll4" value="option4">
                        <label class="form-check-label" for="slideToScroll4">
                            4
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll5" value="option5">
                        <label class="form-check-label" for="slideToScroll5">
                            5
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll6" value="option6">
                        <label class="form-check-label" for="slideToScroll6">
                            6
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="slideToScroll" id="slideToScroll7" value="option7">
                        <label class="form-check-label" for="slideToScroll7">
                            7
                        </label>
                    </div>
                </div>
            </fieldset>


            <div class="form-group row offset-sm-2">
                <label for="slider_speed" class="col-sm-2 col-form-label">Slider Speed</label>
                <div class="col-sm-10">
                    <select id="slider_speed" name="slider_speed" class="form-control">
                        <option value="300">300 ms</option>
                        <option value="500">500 ms</option>
                        <option value="1000">1000 ms</option>
                        <option value="1500" selected="">1500 ms</option>
                        <option value="2000">2000 ms</option>
                        <option value="2500">2500 ms</option>
                        <option value="3000">3000 ms</option>
                        <option value="3500">3500 ms</option>
                        <option value="4000">4000 ms</option>
                        <option value="4500">4500 ms</option>
                        <option value="5000">5000 ms</option>
                    </select>
                </div>
            </div>
            <div class="form-group row offset-sm-2">
                <label for="transition_speed" class="col-sm-2 col-form-label">Transition Speed</label>
                <div class="col-sm-10">
                    <select name="transition_speed" id="transition_speed" class="form-control">
                        <option value="300">300ms</option>
                        <option value="500">500 ms</option>
                        <option value="1000">1000 ms</option>
                        <option value="1500">1500 ms</option>
                        <option value="2000">2000 ms</option>
                        <option value="2500">2500 ms</option>
                        <option value="3000" selected="">3000 ms</option>
                        <option value="3500">3500 ms</option>
                        <option value="4000">4000 ms</option>
                        <option value="4500">4500 ms</option>
                        <option value="5000">5000 ms</option>
                        <option value="5500">5500 ms</option>
                        <option value="6000">6000 ms</option>
                        <option value="6500">6500 ms</option>
                        <option value="7000">7000 ms</option>
                        <option value="7500">7500 ms</option>
                        <option value="8000">8000 ms</option>
                        <option value="8500">8500 ms</option>
                        <option value="9000">9000 ms</option>
                        <option value="9500">9500 ms</option>
                        <option value="10000">10000 ms</option>
                        <option value="10500">10500 ms</option>
                        <option value="11000">11000 ms</option>
                        <option value="11500">11500 ms</option>
                        <option value="12000">12000 ms</option>
                        <option value="12500">12500 ms</option>
                        <option value="13000">13000 ms</option>
                        <option value="13500">13500 ms</option>
                        <option value="14000">14000 ms</option>
                        <option value="14500">14500 ms</option>
                        <option value="15000">15000 ms</option>
                        <option value="15500">15500 ms</option>
                        <option value="16000">16000 ms</option>
                        <option value="16500">16500 ms</option>
                        <option value="17000">17000 ms</option>
                        <option value="17500">17500 ms</option>
                        <option value="18000">18000 ms</option>
                        <option value="18500">18500 ms</option>
                        <option value="19000">19000 ms</option>
                        <option value="19500">19500 ms</option>
                        <option value="20000">20000 ms</option>
                    </select>
                </div>
            </div>

            {#Image border radius#}
            {#Image hover Effects#}
            {#Slider Slide effect#}
            {#Slider Width(in Pixels)#}
            <div class="form-group row offset-sm-2">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
