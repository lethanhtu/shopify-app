{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <form class="setting-pd-slider-frm" method="POST" action="#">
            <h2 class="heading">Create Your Slider</h2>
            <div class="form-group row">
                <label for="slider_name" class="col-sm-2 col-form-label font-weight-bold">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="title" id="title" placeholder="Type name of Slider..." value="{{ data.title }}">
                </div>
            </div>

            <hr>
            <div class="form-group row">
                <label for="" class="col-sm-2 col-form-label font-weight-bold">Type Product</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-sm-2">
                            <div class="form-check form-check-inline">
                                <label class="container-check">Category
                                    <input class="form-check-input" type="radio" name="filter_type" value="category" {% if data.filter_type=='category' %}checked{% endif %}>
                                    <span class="checkmark radio"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-10">
                            <div class="form-check price-radio-group">
                                <label class="container-check">Price
                                    <input class="form-check-input" type="radio" name="filter_type" value="price" {% if data.filter_type=='price' %}checked{% endif %}>
                                    <span class="checkmark radio"></span>
                                    <div class="row list-price">
                                        <label for="list_price" class="col-sm-3 col-form-label text-right">Price Products:</label>
                                        <div class="col-sm-9">
                                            <select id="list_price" name="price_range" class="form-control">
                                                <option value="10">10 usd</option>
                                                <option value="100">100 usd</option>
                                            </select>
                                        </div>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr>

            <div class="form-group row setting-group clearfix">
                <div class="col-sm-2 font-weight-bold">Setting</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <label class="container-check">Slider Autoplay
                            <input class="form-check-input" type="checkbox" name="slider[autoplay]"
                                {% if data.slider.autoplay %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <label class="container-check">Show Loop
                            <input class="form-check-input" type="checkbox" name="slider[infinite]"
                                {% if data.slider.infinite %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <label class="container-check">Show Arrows
                            <input class="form-check-input" type="checkbox" name="slider[arrows]"
                                {% if data.slider.arrows %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
                <div class="offset-sm-2 col-sm-10">
                    <div class="form-check">
                        <label class="container-check">Show Dots
                            <input class="form-check-input" type="checkbox" name="slider[dots]"
                                {% if data.slider.dots %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark"></span>
                        </label>
                    </div>
                </div>
            </div>

            <fieldset class="form-group row offset-sm-2">
                <legend class="col-form-label col-sm-2">Slide To Shows</legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <label class="container-check">1
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="1"
                                {% if data.slider.slidesToShow == 1 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">2
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="2"
                                {% if data.slider.slidesToShow == 2 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">3
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="3"
                                {% if data.slider.slidesToShow == 3 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">4
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="4"
                                {% if data.slider.slidesToShow == 4 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">5
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="5"
                                {% if data.slider.slidesToShow == 5 or data.slider.slidesToShow is empty %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">6
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="6"
                                {% if data.slider.slidesToShow == 6 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">7
                            <input class="form-check-input" type="radio" name="slider[slidesToShow]" value="7"
                                {% if data.slider.slidesToShow == 8 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset class="form-group row offset-sm-2">
                <legend class="col-form-label col-sm-2">Slides To Scroll</legend>
                <div class="col-sm-10">
                    <div class="form-check form-check-inline">
                        <label class="container-check">1
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="1"
                                {% if data.slider.slidesToScroll == 1 or data.slider.slidesToScroll is empty %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">2
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="2"
                                {% if data.slider.slidesToScroll == 2 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">3
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="3"
                                {% if data.slider.slidesToScroll == 3 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">4
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="4"
                                {% if data.slider.slidesToScroll == 4 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">5
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="5"
                                {% if data.slider.slidesToScroll == 5 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="container-check">6
                            <input class="form-check-input" type="radio" name="slider[slidesToScroll]" value="6"
                                {% if data.slider.slidesToScroll == 6 %}
                                    checked
                                {% endif %}
                            >
                            <span class="checkmark radio"></span>
                        </label>
                    </div>
                </div>
            </fieldset>


            <div class="form-group row offset-sm-2">
                <label for="slider_speed" class="col-sm-2 col-form-label">Slider Speed</label>
                <div class="col-sm-10">
                    <select id="slider_speed" name="slider[speed]" class="form-control">
                        <option value="300" {% if data.slider.speed == 300 %}selected{% endif %}>300 ms</option>
                        <option value="500" {% if data.slider.speed == 500 %}selected{% endif %}>500 ms</option>
                        <option value="1000" {% if data.slider.speed == 1000 %}selected{% endif %}>1000 ms</option>
                        <option value="1500" {% if data.slider.speed == 1500 %}selected{% endif %}>1500 ms</option>
                        <option value="2000" {% if data.slider.speed == 2000 %}selected{% endif %}>2000 ms</option>
                        <option value="2500" {% if data.slider.speed == 2500 %}selected{% endif %}>2500 ms</option>
                        <option value="3000" {% if data.slider.speed == 3000 %}selected{% endif %}>3000 ms</option>
                        <option value="3500" {% if data.slider.speed == 3500 %}selected{% endif %}>3500 ms</option>
                        <option value="4000" {% if data.slider.speed == 4000 %}selected{% endif %}>4000 ms</option>
                        <option value="4500" {% if data.slider.speed == 4500 %}selected{% endif %}>4500 ms</option>
                        <option value="5000" {% if data.slider.speed == 5000 %}selected{% endif %}>5000 ms</option>
                    </select>
                </div>
            </div>

            <div class="form-group row offset-sm-2">
                <div class="col-sm-5">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}
