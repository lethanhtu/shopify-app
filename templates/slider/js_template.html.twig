$('<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>').appendTo($('body'));
$('<script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer="defer"></script>').appendTo($('body'));

if($('#shopmacher-slider-content').length > 0) {
    $('.recommendation-items').slick({
        slidesToShow: {{ data.slider.slidesToShow is defined? data.slider.slidesToShow: 5}},
        slidesToScroll: {{ data.slider.slidesToScroll is defined? data.slider.slidesToScroll: 1}},
        autoplay: {{ data.slider.autoplay is defined? 'true': 'false'}},
        dots: {{ data.slider.dots is defined? 'true': 'false'}},
        infinite: {{ data.slider.infinite is defined? 'true': 'false'}},
        arrows: {{ data.slider.arrows is defined? 'true': 'false'}},
        responsive: [{
            breakpoint: 768,
            settings: {
                slidesToShow: 2,
                slidesToScroll: 1,
                infinite: false,
                dots: true
            }
        }]
    });
}
